<h1>Time Sets</h1>

<div class = "time-set">
	<%= form_for @time_set, remote: true do |f| %>
		<div class = "field">
			<%= collection_select(:time_set, :affair_id, Affair.all, :id, :name, {prompt: "chose a category"}, {:class => "category-select cs-select cs-skin-border"}) %>
		</div><!--/field-->

		<%= f.hidden_field :duration %>

		<div class = "timer">
			00:00:00
		</div><!--/timer-->

		<%= f.text_field :local_result, :placeholder => "local_result" %>

		<div class = "control-panel">

			<div class = "control-timer">
				<span class = "button start active"><i class = "fa fa-play"></i></span>
				<span class = "button pause"><i class = "fa fa-pause"></i></span>
				<span class = "button reset"><i class = "fa fa-stop"></i></span>
			</div><!--/control-timer-->

			<div class = "control-record">
				<%= f.submit :class => 'complete' %>
				<button class = "cancel">
					cancel
				</button><!--/button-->
			</div><!--/control-record-->

		</div><!--/control-panel-->
	<% end %>

</div>

<script>
  (function() {
    [].slice.call( document.querySelectorAll( '.time-set select.cs-select' ) ).forEach( function(el) {  
      new SelectFx(el);
    } );
  })();
</script>